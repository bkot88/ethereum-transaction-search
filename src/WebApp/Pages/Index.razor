@page "/"

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Welcome to ethereum transaction search</h5>

        <EditForm Model="@searchRequest" OnValidSubmit="HandleValidSubmit">

            <div class="form-group">
                <label>Block:</label>
                <InputText id="block" @bind-Value="searchRequest.Block" class="form-control" aria-describedby="emailHelp" placeholder="Enter Ethereum Block" />
            </div>
            <div class="form-group">
                <label>Address:</label>
                <InputText id="address" @bind-Value="searchRequest.Address" class="form-control" aria-describedby="emailHelp" placeholder="Enter Ethereum Address" />
            </div>

            <DataAnnotationsValidator />
            <ValidationSummary />

            <button type="submit" class="btn btn-secondary">Search</button>
        </EditForm>
    </div>
</div>

@code {
    private EhthereumTransactionSearchRequest searchRequest = new EhthereumTransactionSearchRequest();

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
